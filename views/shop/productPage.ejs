  <style>
    main {
      max-width: 100%;
      display: flex;
      flex-direction: column;
      justify-content: center;
      background-color: rgb(249, 249, 249);
      margin-top: 2em;
    }

    .product-detaile {
      max-width: 100%;
      display: grid;
      grid-template-columns: 1fr 1fr;
    }

    .single-image {
      max-width: 100%;
      background-color: white;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      gap: 2em;
      margin: 1em 0em 1em 1em;
      padding: 2em;
    }

    .big {
      max-width: 100%;
      object-fit: contain;
    }

    .single-image .big-img {
      max-width: 100%;
      padding-top: 1em;
    }

    .other-image {
      display: flex;
      justify-content: center;
      gap: 1em;
      padding: .5em;
      width: 60%;
      height: 60%;
    }

    .small {
      width: 30%;
      height: 30%;
      object-fit: contain;
    }

    .small img {
      width: 100%;
      padding: .2em;
      border: 1px solid rgb(173, 169, 169);
    }

    .info {
      max-width: 100%;
      /* border: 2px solid black; */
      background-color: white;
      margin: 1em 1em 1em .2em;
      padding: 2em;
      display: flex;
      flex-direction: column;
      gap: 1em;
    }

    .info h2 {
      font-size: 30px;
      margin-top: 1em;
    }

    .info i {
      color: yellow;
    }

    .info span {
      display: flex;
      gap: .3em;
      font-size: 20px;
      font-weight: 500;
    }

    .info span p {
      font-size: 25px;
    }

    .info .btn {
      width: 25em;
    }

    .info .btn button {
      width: 12em;
      padding: 5px;
      border-radius: 2em;
      border: none;
      background-color: #041f47;
      color: white;
      font-size: 16px;
    }

    .btn button:hover {
      cursor: pointer;
      border: 1px solid greenyellow;
      background-color: #85FFBD;
      color: black;
    }

    .specs {
      padding: 1em;
      display: flex;
      flex-direction: column;
      gap: 1em;
    }

    .specs h3 {
      font-size: 22px;
    }

    .specs ul {
      padding-left: 1em;
    }

    .specs ul li {
      margin-top: .5em;
      font-size: 18px;
    }

    .detail {
      margin-top: 1rem;
      border: 1px solid black;
      display: grid;
      grid-template-columns: 1fr 3fr;
      gap: 1rem;
    }

    .detail .img {
      width: 200px;
      height: 200px;
      background-color: aqua;
    }
  </style>
</head>

