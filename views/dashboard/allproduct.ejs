        .card__header p {
            font-size: 20px;
            font-weight: bold;
            text-overflow: ellipsis;
            overflow: hidden;
            white-space: nowrap;
            border-bottom: 1px solid rgb(224, 210, 137);
        }

        .card__content {
            display: flex;
            flex-direction: column;
            padding-top: 5px;
        }

        .product__price span {
            font-size: 23px;
            font-weight: bold;
            text-overflow: ellipsis;
            overflow: hidden;
            white-space: nowrap;
        }

        .product__description span:first-child {
            font-weight: bold;
        }

        .info {
            background-color: blanchedalmond;
            padding: 8px 12px;
            border-bottom-left-radius: 5px;
            border-bottom-right-radius: 5px;
        }

        .search {
            display: flex;
            width: 100%;
            justify-content: center;
            padding: 1rem;
            background-color: rgb(234, 234, 234);
        }

        .search input {
            width: 50%;
            font-size: 1.4rem;
            padding: 0.2rem;
        }

        .search button {
            width: 6rem;
        }

        .actions {
            margin-top: 12px;
            display: flex;
            justify-content: space-between;
            padding-left: 18px;
            padding-right: 18px;

        }

        form {
            height: fit-content;
            width: fit-content;
        }

        .btn {
            position: relative;
            display: inline;
            border-radius: 5px;
            outline: none;
            border: solid .1px rgb(196, 196, 196);
            padding: 4px 12px;
            cursor: pointer;
            background-color: rgb(226, 226, 226);
            text-decoration: none;
        }

        .btn:hover {
            box-shadow: 2px 3px 7px gray;
            transition: .1s;

        }

        @media (max-width: 900px) {
            main .grid {
                display: flex;
                width: 33%;
                height: auto;
                border-radius: 10rem;
            }
        }

        @media (max-width: 700px) {
            main .grid {
                display: flex;
                width: 48%;
                height: auto;
                border-radius: 10rem;
