        /* main container for editing and delete action */
        main {
            display: flex;
            width: 100%;
            padding: 1rem;
            flex-wrap: wrap;
        }

        main .grid {
            display: flex;
            width: 23%;
            margin: .5em;
            border-radius: 12px;
        }

        main .grid .card {
            width: 100%;
            height: 100%;
            display: flex;
            flex-direction: column;
            box-shadow: 0px 5px 15px rgba(0, 0, 0, 0.35);
            padding-top: 0.5rem;
            border-radius: 5px;


        }

        .card__image {
            margin: auto;
