<body>

    <%- include('./dashinclude/main.ejs') %>
        <main>
            <% if (prods.length> 0) { %>
                <% for (let product of prods) { %>
                    <div class="grid">

                        <div class="card product-item">
                            <div class="card__image">
                                <img src="<%= product.imageurl %>" alt="" />
                            </div>
                            <div class="info">
                                <header class="card__header">
                                    <p class="product__title">
                                        <%= product.name %>
                                    </p>
                                </header>
                                <div class="card__content">
                                    <h2 class="product__price">Price : <span>
                                            <%= product.price %>
                                        </span></h2>
                                    <p class="product__description">
                                        <span>Description :</span>
                                        <span>
                                            <%= product.description %>
                                        </span>
                                    </p>
                                    <div class="card__actions actions">

                                        <a href="/admin/dashboard/edit-product/<%= product._id %>?edit=true"
                                            class="btn">Edit</a>

                                        <form action="/admin/dashboard/delete-product" method="POST">
                                            <input type="hidden" value="<%= product._id %>" name="productId">
                                            <button class="btn" type="submit">Delete</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                    <% } %>
                        <% } else { %>
                            <h1>No Products Found!</h1>
                            <% } %>
        </main>

        <%- include('./dashinclude/footer.ejs') %>